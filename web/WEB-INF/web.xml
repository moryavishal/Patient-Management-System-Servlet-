<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>Patient Management System</display-name>
  <welcome-file-list>
    <welcome-file>Home.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
	  <servlet-name>AddPatientServlet</servlet-name>
	  <servlet-class>com.ser.AddPatientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>AddPatientServlet</servlet-name>
	  <url-pattern>/add</url-pattern>
  </servlet-mapping>
  <servlet>
	  <servlet-name>PatientPortalServlet</servlet-name>
	  <servlet-class>com.ser.PatientPortalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>PatientPortalServlet</servlet-name>
	  <url-pattern>/PatientPortal</url-pattern>
  </servlet-mapping>
  <servlet>
	  <servlet-name>DeletePatientServlet</servlet-name>
	  <servlet-class>com.ser.DeletePatientServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>DeletePatientServlet</servlet-name>
	  <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  <servlet>
	  <servlet-name>LoginServlet</servlet-name>
	  <servlet-class>com.ser.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	  <servlet-name>LoginServlet</servlet-name>
	  <url-pattern>/login</url-pattern>
  </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
